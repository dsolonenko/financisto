<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="0dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/op"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:maxLines="1"
            android:text="0"
            android:textColor="#000000"
            android:textSize="36sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/b7"
            style="@style/CalculatorButton"
            android:text="7" />

        <Button
            android:id="@+id/b8"
            style="@style/CalculatorButton"
            android:text="8" />

        <Button
            android:id="@+id/b9"
            style="@style/CalculatorButton"
            android:text="9" />

        <Button
            android:id="@+id/bAdd"
            style="@style/CalculatorButton"
            android:text="+" />

        <Button
            android:id="@+id/bClear"
            style="@style/CalculatorButton"
            android:text="C"
            android:textColor="#f26522"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/b4"
            style="@style/CalculatorButton"
            android:text="4" />

        <Button
            android:id="@+id/b5"
            style="@style/CalculatorButton"
            android:text="5" />

        <Button
            android:id="@+id/b6"
            style="@style/CalculatorButton"
            android:text="6" />

        <Button
            android:id="@+id/bSubtract"
            style="@style/CalculatorButton"
            android:text="-" />

        <Button
            android:id="@+id/bDelete"
            style="@style/CalculatorButton"
            android:text="&lt;" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/b1"
            style="@style/CalculatorButton"
            android:text="1" />

        <Button
            android:id="@+id/b2"
            style="@style/CalculatorButton"
            android:text="2" />

        <Button
            android:id="@+id/b3"
            style="@style/CalculatorButton"
            android:text="3" />

        <Button
            android:id="@+id/bMultiply"
            style="@style/CalculatorButton"
            android:text="*" />

        <Button
            android:id="@+id/bPercent"
            style="@style/CalculatorButton"
            android:text="%" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/b0"
            style="@style/CalculatorButton"
            android:text="0" />

        <Button
            android:id="@+id/bPlusMinus"
            style="@style/CalculatorButton"
            android:text="Â±" />

        <Button
            android:id="@+id/bDot"
            style="@style/CalculatorButton"
            android:text="." />

        <Button
            android:id="@+id/bDivide"
            style="@style/CalculatorButton"
            android:text="/" />

        <Button
            android:id="@+id/bResult"
            style="@style/CalculatorButton"
            android:text="="
            android:textColor="#39b54a"
            android:textStyle="bold" />
    </LinearLayout>

    <include layout="@layout/ok_cancel_buttons" />


</LinearLayout>
