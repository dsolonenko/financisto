<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="fill_parent"
    a:layout_height="fill_parent"
    a:orientation="vertical">

    <EditText
        a:id="@+id/searchFilter"
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:hint="Type template..." /> <!-- todo.mb move to res -->

    <ListView
        a:id="@android:id/list"
        a:layout_width="fill_parent"
        a:layout_height="wrap_content"
        a:layout_weight="1" />

    <TextView
        a:id="@id/android:empty"
        a:layout_width="fill_parent"
        a:layout_height="?android:attr/listPreferredItemHeight"
        a:layout_weight="1"
        a:gravity="center"
        a:text="@string/no_transactions" />

    <LinearLayout
        style="@style/ButtonBar"
        a:layout_width="fill_parent"
        a:layout_height="wrap_content">

        <Button
            a:id="@+id/bEditTemplates"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:layout_weight="1"
            a:text="@string/edit" />

        <ImageButton
            a:id="@+id/bMinus"
            style="@style/MinusButton"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:layout_marginLeft="10dp" />

        <TextView
            a:id="@+id/multiplier"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:text="x1"
            a:textColor="#ffffff"
            a:textStyle="bold" />

        <ImageButton
            a:id="@+id/bPlus"
            style="@style/PlusButton"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:layout_marginRight="10dp" />

        <Button
            a:id="@+id/bCancel"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:layout_weight="1"
            a:text="@string/cancel" />
    </LinearLayout>


</LinearLayout>
